<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg"
    tools:context=".MainActivity"
    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:src="@drawable/tebakbuah" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_ceri"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ceri" />

            <ImageView
                android:id="@+id/imageView_durian"
                android:layout_width="wrap_content"
                android:layout_height="159dp"
                android:layout_weight="1"
                android:src="@drawable/durian" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_apel"
                android:layout_width="235dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/apel" />

            <ImageView
                android:id="@+id/imageView_alpukat"
                android:layout_width="268dp"
                android:layout_height="158dp"
                android:layout_weight="1"
                android:src="@drawable/alpukat" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>